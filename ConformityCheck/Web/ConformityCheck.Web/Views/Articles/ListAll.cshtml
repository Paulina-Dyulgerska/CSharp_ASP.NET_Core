@model ArticlesListAllModel

@{
    this.ViewData["Title"] = "Articles";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between mb-auto p-2">
                <h4 class="m-0 font-weight-bold">
                    @this.ViewData["Title"]
                </h4>
                <span>(total of @Model.ItemsCount articles)</span>
                <a asp-action="Create" class="btn btn-primary">Create article</a>
            </div>
            <div class="d-flex justify-content-between p-2 font-weight-bold">
                <div class="btn-toolbar mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                        <input size="36" type="text" id="searchInput" placeholder="Search for article number or descriptiion...">
                    </div>
                </div>
                <div class="btn-toolbar mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                Items per page
                            </div>
                        </div>
                        <partial name="_ItemsPerPagePartial" model="Model" />
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            <span>MS = Main supplier</span><br />
            <span>Conf. MS = Confirmed by main supplier</span><br />
            <span>Conf. AS = Confirmed by all suppliers</span><br />
            <table id="articlesDataTable" class="table table-responsive-sm table-sm table-hover dataTable">
                <thead>
                    <tr class="d-flex">
                        <th class="col-2">
                            Article Nr.
                            <button onclick="sortList()">Sort</button>
                        </th>
                        <th class="col-2">Description</th>
                        <th class="col-1">MS Nr.</th>
                        <th class="col-2">MS name</th>
                        <th class="col-1">Conf. AS</th>
                        <th class="col-1">Conf. MS</th>
                        <th class="col-1">Details</th>
                        <th class="col-1">Edit</th>
                        <th class="col-1">Delete</th>
                    </tr>
                </thead>
                @foreach (var article in this.Model.Articles)
                {
                    <tr class="d-flex" data-id="@article.Id" @if (article.IsConfirmed) { <text> style="background-color: #dcfddc;" </text> }>
                        <td id="search" class="col-2">@article.Number</td>
                        <td id="search" class="col-2">@article.Description</td>
                        <td class="col-1">@article.Suppliers.FirstOrDefault(s => s.IsMainSupplier == true)?.Number</td>
                        <td class="col-2">@article.Suppliers.FirstOrDefault(s => s.IsMainSupplier == true)?.Name</td>
                        <td class="col-1">@(article.IsConfirmed ? "Yes" : "No")</td>
                        <td class="col-1 isConfirmed">@(article.IsConfirmedByMainSupplier ? "Yes" : "No")</td>
                        <td class="col-1">
                            <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@article.Id">
                                <span class="icon text-white">
                                    <i class="fas fa-info-circle"></i>
                                </span>
                                <span class="text">Details</span>
                            </a>
                        </td>
                        <td class="col-1">
                            <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@article.Id">
                                <span class="icon text-white">
                                    <i class="fas fa-edit"></i>
                                </span>
                                <span class="text">Edit</span>
                            </a>
                        </td>
                        <td class="col-1">
                            <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@article.Id">
                                <span class="icon text-white-50">
                                    <i class="fas fa-trash"></i>
                                </span>
                                <span class="text">Delete</span>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="card-footer ">
            <partial name="_PagingPartial" model="@Model" />
        </div>
    </div>
</div>

@section SideBar{
    <partial name="_SideMenuGeneral" />
}

