            @foreach (var confirmedConformity in article.ArticleConformityTypes)
            {
                <span>@confirmedConformity</span>
            }
        </td>*@
    <hr />
    <article>
        <h5>Products - TODO - just view</h5>
        @*<partial name="" model="Model" />*@
    </article>
    <hr />
    <article>
        <h5>Substances - TODO - just view</h5>
        @*<partial name="" model="Model" />*@
    </article>
</section>

<div>
    <form method="post" class="col-md-10 mx-auto">
        @* za file mi trqbwa multipart/form-data, ako nqma da kachwam file, da go smenq!!!!! *@

        <div asp-validation-summary="All" class="text-danger"></div>

        <input asp-for="Id" hidden value="@Model.Id" />

        <div class="form-group">
            <label asp-for="Number">Article number:</label>
            <span class="text-primary ">@Model.Number</span>
        </div>

        <div class="form-group font-weight-bold">
            <label asp-for="Description">Change article's description:</label>
            <textarea rows="1" asp-for="Description" class="form-control" value="@Model.Description"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Suppliers"></label>
            <partial name="_ArticleSuppliersTable" model="Model.Suppliers" />
        </div>

        <div class="form-group">
            <label asp-for="ConformityTypes"></label>
            <partial name="_ArticleConformitiesTable" model="Model" />
        </div>

        <div class="form-group">
            <label asp-for="Products"></label>
            <select asp-for="Products" class="form-control">
                <vc:products></vc:products>
            </select>
            <span asp-validation-for="Products" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Substances"></label>
            <select asp-for="Substances" class="form-control">
                <vc:substances></vc:substances>
            </select>
            <span asp-validation-for="Substances" class="text-danger"></span>
        </div>

        <div id="conformitiesContainer">
            <label asp-for="ConformityTypes"></label>
            <a class="btn btn-success" onclick="AddMoreConformities()">+</a>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Save changes" />
        </div>
    </form>
</div>

@section SideBar{
    <partial name="_SideMenuEdit" model="Model" />
}
