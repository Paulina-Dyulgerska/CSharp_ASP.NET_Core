<form method="post" class="col-md-4 mx-auto" enctype="multipart/form-data">
    <h1>@this.ViewData["Title"]</h1>

    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="text" hidden id="id" name="Export.Id" value="@Model.Export.Id" />

    <div class="form-group">
        <label asp-for="Export.Number"></label>
        <span class="text-primary ">@Model.Export.Number</span>
    </div>

    <div class="form-group">
        <label asp-for="Export.Description">Article description:</label>
        <textarea rows="2" asp-for="Export.Description" class="form-control" placeholder="@Model.Export.Description"></textarea>
        <span asp-validation-for="Export.Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <table class="table table-light table-responsive-md table-hover table-bordered table-sm">
            <thead>
                <tr>
                    <th scope="col">Supplier</th>
                    <th scope="col">Delete</th>
                </tr>
            </thead>
            @foreach (var supplier in this.Model.Export.Suppliers)
            {
                <tr>
                    <td>@supplier.NumberAndName</td>
                    <td><a asp-action="DeleteSupplier" class="btn btn-primary" id="@supplier.Id">Delete</a></td>
                </tr>
            }
        </table>
    </div>

    <div class="form-group">
        <p>If you wanna add supplier to the articles, please select one from the list:</p>
        <label asp-for="Create.Supplier.Id"></label>
        @*<select asp-for="SupplierId" class="form-control" asp-items="suppliers"></select>*@
        <select asp-for="Create.Supplier.Id" class="form-control">
            <option class="form-control" value=""></option>
            @foreach (var item in @Model.Create.SuppliersAvailable)
            {
                <option class="form-control" value="@item.Id">@item.NumberAndName</option>
            }
        </select>
        <span asp-validation-for="Create.Supplier.Id" class="text-danger"></span>
    </div>

    @*<div class="form-group">
            <label asp-for="ProductsAvailable"></label>
            <select asp-for="ProductsAvailable" class="form-control">
                @foreach (var item in @Model.ProductsAvailable)
                {
                    <option class="form-control" value="@item">@item.Number</option>
                }
            </select>
            <span asp-validation-for="ProductsAvailable" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="SubstancesAvailable"></label>
            <select asp-for="SubstancesAvailable" class="form-control">
                @foreach (var item in @Model.SubstancesAvailable)
                {
                    <option class="form-control" value="@item">@item.CASNumber</option>
                }
            </select>
            <span asp-validation-for="SubstancesAvailable" class="text-danger"></span>
        </div>*@

    <div class="form-group">
        <label asp-for="Create.ConformityTypes"></label>
        <select size="10" asp-for="Create.ConformityTypes" class="form-control">
            @foreach (var item in @Model.Create.ConformityTypesAvailable)
            {
                <option class="form-control" value="@item.Id">@item.Description</option>
            }
        </select>
        <span asp-validation-for="Create.ConformityTypes" class="text-danger"></span>
    </div>

    <div id="conformitiesContainer">
        <label asp-for="Create.ConformityTypesAvailable"></label>
        <a class="btn btn-success" onclick="AddMoreConformities()">+</a>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" />
    </div>
</form>

