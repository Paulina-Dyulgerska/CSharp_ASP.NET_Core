@model IEnumerable<SupplierFullInfoModel>

@{
    this.ViewData["Title"] = "Suppliers";
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 ">
            <div class="d-flex justify-content-between">
                <h4 class="m-0 font-weight-bold text-primary ">
                    @this.ViewData["Title"]
                </h4>
                <a asp-action="Create" class="btn btn-primary justify-content-end">Create supplier</a>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="dataTable" class="table table-light table-responsive table-hover table-striped table-bordered table-sm">
                    <thead>
                        <tr>
                            <th class="col-1">Supplier number</th>
                            <th class="col-1">Supplier name</th>
                            <th class="col-1">Contact person</th>
                            @*<th class="col-1">E-mail</th>*@
                            <th class="col-1">Phone number</th>
                            <th class="col-1">UserId</th>
                            <th class="col-1">Articles count</th>
                            <th class="col-1">Details</th>
                            <th class="col-1">Edit</th>
                            <th class="col-1">Delete</th>
                        </tr>
                    </thead>
                    @foreach (var supplier in this.Model)
                    {
                        <tr>
                            <td class="col-1">@supplier.Number</td>
                            <td class="col-1">@supplier.Name</td>
                            <td class="col-1">@supplier.ContactPersonName</td>
                            @*<td class="col-1">@supplier.Email</td>*@
                            <td class="col-1">@supplier.PhoneNumber</td>
                            <td class="col-1">@supplier.UserId</td>
                            <td class="col-1">@supplier.ArticlesCount</td>
                            <td class="col-1">
                                <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@supplier.Id">
                                    <span class="icon text-white">
                                        <i class="fas fa-info-circle"></i>
                                    </span>
                                    <span class="text">Details</span>
                                </a>
                            </td>
                            <td class="col-1">
                                <a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@supplier.Id">
                                    <span class="icon text-white">
                                        <i class="fas fa-edit"></i>
                                    </span>
                                    <span class="text">Edit</span>
                                </a>
                            </td>
                            <td class="col-1">
                                <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@supplier.Id">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-trash"></i>
                                    </span>
                                    <span class="text">Delete</span>
                                </a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

@section SideBar{
    <partial name="_SideMenuGeneral" />
}
