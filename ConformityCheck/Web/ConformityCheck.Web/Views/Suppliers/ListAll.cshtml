@model SupplierFullExportModelList

@{
    this.ViewData["Title"] = "Suppliers";
}

<h1>@this.ViewData["Title"]</h1>

<table class="table table-striped table-bordered table-sm mx-auto">
    <thead>
        <tr>
            <th scope="col">Supplier number</th>
            <th scope="col">Supplier name</th>
            <th scope="col">Contact person</th>
            <th scope="col">E-mail</th>
            <th scope="col">Phone number</th>
            <th scope="col">UserId</th>
            <th scope="col">Articles count</th>
            <th scope="col">Edit</th>
        </tr>
    </thead>
    @foreach (var supplier in this.Model.Suppliers)
    {
<tr class="table-light">
    <td>@supplier.Number</td>
    <td>@supplier.Name</td>
    <td>@supplier.ContactPersonName</td>
    <td>@supplier.Email</td>
    <td>@supplier.PhoneNumber</td>
    <td>@supplier.UserId</td>
    <td>@supplier.ArticlesCount</td>
    <td><a asp-action="Edit" class="btn btn-primary" id="@supplier.Id">Edit</a></td>
</tr>
    }
</table>

<a asp-action="Create" class="btn btn-primary">Create new</a>
