<h3>@this.ViewData["Title"]</h3>

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success" role="alert">
        @this.TempData["Message"]
    </div>
}

<a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a>

<div>
    <div class="form-group">
        <label asp-for="Number">Supplier number: </label>
        <span class="text-primary ">@Model.Number</span>
    </div>

    <div class="form-group">
        <label asp-for="Name">Supplier name: </label>
        <span class="text-primary ">@Model.Name</span>
    </div>

    <div class="form-group">
        <label asp-for="Articles"></label>
        <partial name="_SupplierArticlesConformityTable" model="Model" />
    </div>

</div>

@section SubMenu{
    <partial name="_SubMenuGeneral" model="Model" />
}

