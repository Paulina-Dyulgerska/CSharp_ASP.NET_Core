<table id="dataTable" class="table table-responsive-sm table-sm table-hover">
    <thead>
        <tr class="d-flex">
            <th class="col-2">
                Supplier Nr.
                <button onclick="sortList()">Sort</button>
            </th>
            <th class="col">Name</th>
            @*<th class="col-3">Contact person</th>*@
            @*<th class="col-1">E-mail</th>*@
            @*<th class="col-1">Phone number</th>*@
            <th class="col-2">UserId</th>
            <th class="col-1">Articles count</th>
            <th class="col-1">Details</th>
            <th class="col-1">Edit</th>
            <th class="col-1">Delete</th>
        </tr>
    </thead>
    @foreach (var supplier in this.Model)
    {
        <tr class="d-flex" data-id="@supplier.Id">
            <td id="search" class="col-2">@supplier.Number</td>
            <td id="search" class="col">@supplier.Name</td>
            @*<td class="col-3">@supplier.ContactPersonName</td>*@
            @*<td class="col-1">@supplier.Email</td>*@
            @*<td class="col-1">@supplier.PhoneNumber</td>*@
            <td class="col-2">@supplier.UserId</td>
            @*<td class="col-1">@supplier.ArticlesCount</td>*@
            <td class="col-1">@supplier.ArticleSuppliersCount</td>
            <td class="col-1">
                <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@supplier.Id">
                    <span class="icon text-white">
                        <i class="fas fa-info-circle"></i>
                    </span>
                    <span class="text">Details</span>
                </a>
            </td>
            <td class="col-1">
                @if (User.Identity.IsAuthenticated)
                {<a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@supplier.Id">
                        <span class="icon text-white">
                            <i class="fas fa-edit"></i>
                        </span>
                        <span class="text">Edit</span>
                    </a>
                }
                else
                {
                    <a class="btn btn-sm btn-secondary" asp-area="Identity" asp-page="/Account/Login">
                        <span class="icon text-white">
                            <i class="fas fa-sign-in-alt"></i>
                        </span>
                        <span class="text">Login</span>
                    </a>
                }
            </td>
            <td class="col-1">
                @if (User.Identity.IsAuthenticated)
                {<a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@supplier.Id">
                        <span class="icon text-white-50">
                            <i class="fas fa-trash"></i>
                        </span>
                        <span class="text">Delete</span>
                    </a>
                }
                else
                {
                    <a class="btn btn-sm btn-secondary" asp-area="Identity" asp-page="/Account/Login">
                        <span class="icon text-white">
                            <i class="fas fa-sign-in-alt"></i>
                        </span>
                        <span class="text">Login</span>
                    </a>
                }
            </td>
        </tr>
    }
</table>