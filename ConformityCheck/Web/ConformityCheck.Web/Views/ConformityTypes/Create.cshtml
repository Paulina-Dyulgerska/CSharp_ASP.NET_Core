<h3>@this.ViewData["Title"]</h3>

<div>
    <form method="post" class="col-md-6 mx-auto">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea rows="2" asp-for="Description" class="form-control" 
                      placeholder="Conformity type description" autofocus></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-info" value="Create" />
            <input type="reset" class="btn btn-primary" value="Clear form" />
            <a class="btn btn-secondary" value="Cancel" asp-action="ListAll">Cancel</a>
        </div>
    </form>
</div>

@section SideBar{
    <partial name="_SideMenuGeneral" />
}