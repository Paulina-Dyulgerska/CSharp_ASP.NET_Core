@model IEnumerable<ConformityTypeExportModel>

@{
    this.ViewData["Title"] = "Conformity types";
}

@if (this.TempData.ContainsKey("Message"))
{
    <div class="alert alert-success" role="alert">
        @this.TempData["Message"]
    </div>
}
@if (this.TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger" role="alert">
        @this.TempData["ErrorMessage"]
    </div>
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <div class="d-flex justify-content-between mb-auto p-2">
                <h4 class="m-0 font-weight-bold">
                    @this.ViewData["Title"]
                </h4>
                <span>(total of @Model.Count() conformity types)</span>
                <a asp-action="Create" class="btn btn-primary justify-content-end">
                    <i class="fab fa-creative-commons-remix"></i> Create conformity type
                </a>
            </div>
            <div class="d-flex justify-content-between p-2 font-weight-bold">
                <div class="btn-toolbar mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <i class="fas fa-search"></i>
                            </div>
                        </div>
                        <input size="46" type="text" id="searchInput" placeholder="Search for conformity type Nr. or description...">
                    </div>
                </div>
                <div class="btn-toolbar mb-3">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                            </div>
                        </div>
                        <div>
                            @*<partial name="_ItemsPerPagePartial" model="Model" />*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body">
            @*<table id="dataTable" class="table table-responsive-sm table-bordered table-hover">*@
            <table id="dataTable" class="table table-responsive-sm table-sm table-hover">
                <thead>
                    <tr class="d-flex">
                        <th class="col-1">Nr.</th>
                        <th class="col">Description</th>
                        <th class="col-2">User id</th>
                        <th class="col-2">Created on</th>
                        <th class="col-2">Modified on</th>
                        <th class="col-1">Details</th>
                        <th class="col-1">Edit</th>
                        <th class="col-1">Delete</th>
                    </tr>
                </thead>
                @foreach (var conformityType in this.Model)
                {
                    <tr class="d-flex">
                        <td class="col-1">@conformityType.Id</td>
                        <td class="col">@conformityType.Description</td>
                        <td class="col-2">@conformityType.UserId</td>
                        <td class="col-2">@conformityType.CreatedOn.ToShortDateString()</td>
                        <td class="col-2">
                            @(conformityType.ModifiedOn.HasValue ?
                                                conformityType.ModifiedOn.Value.ToShortDateString() : "-")
                        </td>
                        <td class="col-1">
                            <a asp-action="Details" class="btn btn-sm btn-info" asp-route-id="@conformityType.Id">
                                <span class="icon text-white">
                                    <i class="fas fa-info-circle"></i>
                                </span>
                                <span class="text">Details</span>
                            </a>
                        </td>
                        <td class="col-1">
                            @if (User.Identity.IsAuthenticated)
                            {<a asp-action="Edit" class="btn btn-sm btn-primary" asp-route-id="@conformityType.Id">
                                    <span class="icon text-white">
                                        <i class="fas fa-edit"></i>
                                    </span>
                                    <span class="text">Edit</span>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-sm btn-secondary" asp-area="Identity" asp-page="/Account/Login">
                                    <span class="icon text-white">
                                        <i class="fas fa-sign-in-alt"></i>
                                    </span>
                                    <span class="text">Login</span>
                                </a>
                            }
                        </td>
                        <td class="col-1">
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-action="Delete" class="btn btn-sm btn-danger" asp-route-id="@conformityType.Id">
                                    <span class="icon text-white-50">
                                        <i class="fas fa-trash"></i>
                                    </span>
                                    <span class="text">Delete</span>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-sm btn-secondary" asp-area="Identity" asp-page="/Account/Login">
                                    <span class="icon text-white">
                                        <i class="fas fa-sign-in-alt"></i>
                                    </span>
                                    <span class="text">Login</span>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </table>
            @*<thead>
                    <tr class="d-flex">
                        <th class="col-2">
                            Supplier Nr.
                            <button onclick="sortList()">Sort</button>
                        </th>
                        <th class="col-3">Name</th>
                        <th class="col-2">UserId</th>
                        <th class="col-1">Articles count</th>
                        <th class="col-1">Details</th>
                        <th class="col-1">Edit</th>
                        <th class="col-1">Delete</th>
                    </tr>
                </thead>*@

        </div>
    </div>
</div>

@section SideBar{
    <partial name="_SideMenuGeneral" />
}

@section Scripts{
    <script src="~/js/alerts.js" asp-append-version="true"></script>
    <script src="~/js/tables.js" asp-append-version="true"></script>
}