@model PagingViewModel
<ul class="pagination justify-content-center font-weight-bold">
    <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text> }">
        <a class="page-link" asp-action="ListAll" asp-route-id="@Model.PreviousPageNumber" asp-route-itemsPerPage="@Model.ItemsPerPage">
            <i class="fas fa-chevron-left"></i>
        </a>
    </li>
    <li class="page-item @if (!Model.HasPreviousPage) { <text>disabled</text> }">
        <a class="page-link" asp-action="ListAll" asp-route-id="1" asp-route-itemsPerPage="@Model.ItemsPerPage">
            1
        </a>
    </li>
    <li class="page-item @if (!Model.HasPreviousInterval) { <text>disabled</text> }">
        <a class="page-link" asp-action="ListAll"
           asp-route-id="@(Model.PageNumber - Model.IntervalOfPagesToShow - 1)" asp-route-itemsPerPage="@Model.ItemsPerPage">
            ...
        </a>
    </li>
    @for (int i = Model.PageNumber - Model.IntervalOfPagesToShow; i < Model.PageNumber; i++)
    {
        if (i > 0)
        {
            <li class="page-item">
                <a class="page-link" asp-action="ListAll" asp-route-id="@i"
                   asp-route-itemsPerPage="@Model.ItemsPerPage">
                    @i
                </a>
            </li>
        }
    }
    <li class="page-item active" aria-current="page">
        <span class="page-link">
            @Model.PageNumber
            <span class="sr-only">(current)</span>
        </span>
    </li>
    @for (int i = Model.PageNumber + 1; i <= Model.PageNumber + Model.IntervalOfPagesToShow; i++)
    {
        if (i <= Model.PagesCount)
        {
            <li class="page-item">
                <a class="page-link" asp-action="ListAll" asp-route-id="@i"
                   asp-route-itemsPerPage="@Model.ItemsPerPage">
                    @i
                </a>
            </li>
        }
    }

    <li class="page-item @if (!Model.HasNextInterval) { <text>disabled</text> }">
        <a class="page-link" asp-action="ListAll"
           asp-route-id="@(Model.PageNumber + Model.IntervalOfPagesToShow + 1)" asp-route-itemsPerPage="@Model.ItemsPerPage">
            ...
        </a>
    </li>
    <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text> }">
        <a class="page-link" asp-action="ListAll" asp-route-id="@Model.PagesCount" asp-route-itemsPerPage="@Model.ItemsPerPage">
            @Model.PagesCount
        </a>
    </li>
    <li class="page-item @if (!Model.HasNextPage) { <text>disabled</text> }">
        <a class="page-link" asp-action="ListAll" asp-route-id="@Model.NextPageNumber" asp-route-itemsPerPage="@Model.ItemsPerPage">
            <i class="fas fa-chevron-right"></i>
        </a>
    </li>
</ul>
