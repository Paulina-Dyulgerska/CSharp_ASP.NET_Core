@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

<section class="display-data-wrapper">
    <section class="display-data-container">

        <section class="display-data-header">
            <article class="title-container">
                <h4 class="title text-danger">
                    @this.ViewData["Title"]
                </h4>
            </article>
        </section>

        <section class="display-data-body">
            <article class="form-data-container flex-column">
                <article class="data-container">
                    <article class="large-margin-vertical center">
                        <p class="text-danger">You do not have access to this resource.</p>
                    </article>
                </article>
            </article>
        </section>

        <section class="display-data-footer">
            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-sm btn-info">Back to home page</a>
        </section>
    </section>
</section>