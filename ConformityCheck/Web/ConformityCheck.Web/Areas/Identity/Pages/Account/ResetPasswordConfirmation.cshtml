@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Reset password confirmation";
}

<section class="display-data-wrapper">
    <section class="display-data-container">
        <section class="display-data-header">
            <article class="title-container">
                <h4 class="title">
                    @this.ViewData["Title"]
                </h4>
            </article>
        </section>

        <section class="display-data-body">
            <article class="data-container">
                <p class="center">
                    Your password has been reset.
                </p>
                <p class="center">
                    Please <a asp-page="./Login">click here to log in</a>.
                </p>
            </article>
        </section>

        <section class="display-data-footer">
        </section>
    </section>
</section>
